//Алгоритм 1-битного воспроизведения, основанный на диффузии, то есть переносе ошибки на следующий сэмпл

//4000 - запись звука, отсчетов в секунду
//но мы хотим играть 40000, то есть 10 раз один отсчет
//поэтому пауза между отсчетами 25 мкс, но так как Ардуино не мгновенно вычисляет,
//ставим меньше
const int repeats = 10;   //число повторов одного сэмпла
const int pause_mcs = 20; //пауза между сэмплами
int value = 0; //накопленная ошибка диффузии

const int diff_step = 50; //127; //шаг вычитания диффузии
//должен соответствовать максимальной громкости записи, тогда будет звучать чище

//Совет: если у вас маленький зуммер, то чтобы он меньше шумел 
//- его можно зажать в ладони или поместить в поролон, чтобы убрать высокие частоты.
//А при прослушивании на более крупных динамиках шум меньше (он высокочастотный).

void setup() {
  pinMode(pin_buz, OUTPUT); //пин для зуммера
}

void loop() {
  for (int i = 0; i < 1704; i++) {    //пробегаем по всем звуковым отсчетам
    char s = sample[i];               //-128..127

    for (byte rep = 0; rep < repeats; rep++) {
      value += s;
      if (value >= 0) {
        digitalWrite(pin_buz, HIGH);    //выдаем на динамик
        value -= diff_step;             //корректируем ошибку
      }
      else {
       digitalWrite(pin_buz, LOW);     //выдаем на динамик
        value += diff_step;             //корректируем ошибку
      }
      //пауза между отсчетами
      delayMicroseconds(pause_mcs); 
    }
  }
  
  delay(500);   //пауза между воспроизведениями
}
